{
    "name": "codijo/relayo-php-sdk",
    "description": "SDK PHP oficial para a API Relayo - Comunicação com WhatsApp e gerenciamento de instâncias",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "relayo",
        "whatsapp",
        "api",
        "sdk",
        "php"
    ],
    "authors": [
        {
            "name": "Codijo Team",
            "email": "dev@codijo.com.br"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^3.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "guzzlehttp/guzzle": "^7.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Relayo\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Relayo\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "audit": "composer audit --format=json"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 